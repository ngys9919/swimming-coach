{{#extends 'base'}}

{{#block "title"}}All Customers{{/block}}

{{#block "content"}}
<h1>All Customers</h1>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Rating</th>
            <th>Company Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each customerList}}
        <tr>
            <td>{{first_name}}</td>
            <td>{{last_name}}</td>
            <td>{{rating}}</td>
            <td>{{name}}</td>
            <td>
                <a href="/customers/{{customer_id}}/edit" class="btn btn-primary btn-sm">Edit</a>
                <a href="/customers/{{customer_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}

{{/extends}}
